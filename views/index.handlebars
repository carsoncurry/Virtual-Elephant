<div class="jumbotron bg-info">
  <h1 class="text-center"><img src="https://image.flaticon.com/icons/svg/113/113269.svg" id="elephant-logo" alt="logo">
    {{msg}} <img src="https://image.flaticon.com/icons/svg/113/113269.svg" id="elephant-logo" alt="logo"></h1>
</div>

<div id="home">
  <div class="container bg-light rounded">
    <div class="row col-md-12">
      <h2 class="text-center">Provide your gift information to send your gifts and join the party!</h2>
      <form class="clearfix mb-4 col-md-12" action="POST">
        <div class="form-group">
          <label for="giver-text">Gifter</label>
          <input type="text" id="giver-text" class="form-control" aria-describedby="giver-text" placeholder="Who is sending the gift?">
        </div>
        <div class="form-group">
          <label for="example-text">Gift Recipient</label>
          <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Who will receive the gift?">
        </div>
        <div class="form-group">
          <label for="example-description">Gift Description</label>
          <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Please, leave a brief description of the gift."></textarea>
        </div>
        <div class="form-group">
          <label for="example-image">Gift Image (Not Require) </label>
          <textarea class="form-control" id="gift-image" aria-describedby="gift-image" placeholder="Upload an image link so they can see their gift!"></textarea>
        </div>
        <button id="submit" class="btn btn-primary float-right bg-danger"><i class="fas fa-gift"></i> Submit</button>
      </form>
    </div>
  </div>

  <br>

  <div class="container bg-light rounded">
    <div class="row">
      <div class="col-md-12">
        <h1 class="text-center">Your Party Room</h1>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-12 bg-light">
        <h3 class="text-center">
          Welcome to your Virtual Elephant party room!
          From here you can invite more guests, send gifts, see what gifts are headed your way and leave messages in the chat box below!
        </h3>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <a href="/api/friend"><button id="invite-button" class="btn btn-lg btn-danger"> Invite Guests <i class="fas fa-user"></i></button></a>
      </div>
    </div>

    <div class="row">
      <div class="col-md-5">
        <h2>Group Chat:</h2>
        <div id="elephant-chat">
          <div id="chat-window">
            <div id="output"></div>
            <div id="feedback"></div>
          </div>
          <input id="handle" type="text" placeholder="Your Name" />
          <input id="message" type="text" placeholder="Your Message" />
          <button class="btn bg-danger" id="send">Send</button>

        </div>
      </div>

      <div class="col-md-5 offset-2">
        <h2>Gift Pile:</h2>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}'s Gift from {{this.gifter}}</a>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

