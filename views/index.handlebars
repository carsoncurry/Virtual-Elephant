<div class="jumbotron bg-info">
  <h1 class="text-center"><img class="animated tada" src="https://image.flaticon.com/icons/svg/113/113269.svg" id="elephant-logo" alt="logo">
    {{msg}} <img class="animated tada" src="https://image.flaticon.com/icons/svg/113/113269.svg" id="elephant-logo" alt="logo"></h1>
</div>

  <div class="container bg-light rounded">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <h1 class="text-center">Your Party Room</h1>
      </div>
    </div>
    <hr>

    <div class="container bg-light rounded col-md-8 offset-2 col-sm-12">
      <div class="row bg-light">
        <div class="rounded">
          <h3 class="text-center" id="welcome-text">
            Welcome to your Virtual Elephant party room!
            From here you can invite more guests, send gifts, see what you're getting and leave messages in the chat box below!
          </h3>
        </div>
      </div>
      <div class="row bg-light">
        <div class="col-md-6">
          <a href="/api/friend"><button id="invite-button" class="btn btn-lg btn-danger col-md-12"><i class="fas fa-user"></i> Invite Guests! </button></a>
        </div>
        <div class="col-md-6">
          <button id="modal" class="btn btn-lg btn-danger col-md-12"><i class="fas fa-gift"></i> Send Gifts! </button>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-5 col-sm-12">
        <h2>Group Chat:</h2>
        <div id="elephant-chat">
          <div id="chat-window" class="rounded">
            <div id="output"></div>
            <div id="feedback"></div>
          </div>
          <input id="handle" type="text" placeholder="Your Name" />
          <input id="message" type="text" placeholder="Your Message" />
          <button class="btn bg-danger rounded" id="send"><i class="far fa-comments"></i> Send</button>

        </div>
      </div>

      <div class="col-md-5 offset-2 col-sm-12">
        <h2>Gift Pile:</h2>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}'s Gift from {{this.gifter}}</a>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<div id="home">
  <div class="container bg-light rounded">
    <div class="row col-md-12">
      <h2 class="text-center">Provide your gift information to send your gifts and join the party!</h2>
      <form class="clearfix mb-4 col-md-12" action="POST">
        <div class="form-group">
          <label for="giver-text">Gifter</label>
          <input type="text" id="giver-text" class="form-control" aria-describedby="giver-text" placeholder="Who is sending the gift?">
        </div>
        <div class="form-group">
          <label for="example-text">Gift Recipient</label>
          <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Who will receive the gift?">
        </div>
        <div class="form-group">
          <label for="example-description">Gift Description</label>
          <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Please, leave a brief description of the gift."></textarea>
        </div>
        <div class="form-group">
          <label for="example-image">Gift Image</label>
          <textarea class="form-control" id="gift-image" aria-describedby="gift-image" placeholder="Upload an image link so they can see their gift!"></textarea>
        </div>
        <button id="submit" class="btn btn-primary float-right bg-danger"><i class="fas fa-gift"></i> Submit</button>
      </form>
    </div>
  </div>


